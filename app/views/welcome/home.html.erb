<div class="home">
  <div class="home__row">
    <div class="home__card no-padding twice-size">
      <div class="card__front blueish">
        <h2>WHAT</h2>
        <%= image_tag('clapboard.svg', class: 'home__icon') %>
      </div>
      <%= render 'what' %>
    </div>
    <%= link_to when_graph_path, remote: true, class: "home__card no-padding once-size discrete-link" do %>
      <div class="card__front blackish">
        <h2>WHEN</h2>
        <%= image_tag('hourglass.svg', class: 'home__icon') %>
      </div>
      <%= render 'when' %>
    <% end %>
  </div>
  <div class="home__row">
    <div class="home__card no-padding once-size">
      <div class="card__front yellowish">
        <h2>WHO</h2>
        <%= image_tag('chair.svg', class: 'home__icon') %>
      </div>
      <%= render 'who' %>
    </div>
    <%= link_to where_graph_path, remote: true, class: "home__card no-padding twice-size discrete-link home__card--map" do %>
      <div class="card__front pinkish">
        <h2>WHERE</h2>
        <%= image_tag('earth-globe.svg', class: 'home__icon') %>
      </div>
      <%= render 'where' %>
    <% end %>
  </div>
</div>
