<div class="container-fluid">
	<div class="row">
		<div class="col-sm-8 card">
			<div class="col-sm-12 what card-front">
				<h2>WHAT</h2>
			</div>
			<div class="col-sm-12 what-back card-back">
				<h3>Top 3 film turnouts</h3>
				<% @movies_podium.each do |movie| %>
					<div class="col-sm-4">
						<img src="<%= movie.poster_url %>"/>
						<figcaption><%= movie.title %>,<br><%= movie.events.last.attendees_nb %> filmbuffs</figcaption>
					</div>
				<% end %>
				<p>
					<a href="#">View all 60 films</a>
				</p>
			</div>			
		</div>
		<%= link_to when_graph_path, remote: true do %>
		<div class="col-sm-4 card">
			<div class="col-sm-12 when card-front" id="when">
			
				<h2>WHEN</h2>
			
			</div>
			<div class="col-sm-12 card-back when-back">
				<div class="center">
					<h3>We've seen movies from <%= @oldest_movie.year %> to <%= @latest_movie.year %></h3>
				</div>
				
				<div class="center" id="when-graph">
				</div>
			</div>
		</div>
		<% end %>
	</div>
	<div class="row">
		<div class="col-sm-4 card">
			<div class="col-sm-12 who card-front">
				<h2>WHO</h2>
			</div>
			<div class="col-sm-12 card-back">
			Showing directors we've seen most movies from
			</div>
		</div>
		<div class="col-sm-8 card">
			<div class="col-sm-12 where card-front">
				<h2>WHERE</h2>
			</div>
			<div class="col-sm-12 card-back">
			Showing countries we've seen movies in
			</div>
		</div>
	</div>
</div>